{
  "name": "neogm",
  "version": "1.0.0",
  "description": "Object Graph Mapping (OGM) library for Neo4J",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --testMatch='**/__tests__/**/*.spec.ts'",
    "test:integration": "jest --testMatch='**/__tests__/**/*.test.ts'",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.ts'",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build",
    "docker:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:down": "docker-compose -f docker-compose.test.yml down -v",
    "docker:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "docker:restart": "npm run docker:down && npm run docker:up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aigouassel/neorm.git"
  },
  "keywords": [
    "neo4j",
    "ogm",
    "graph",
    "database",
    "typescript"
  ],
  "author": "audreyigouassel@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aigouassel/neorm/issues"
  },
  "homepage": "https://github.com/aigouassel/neorm#readme",
  "dependencies": {
    "@types/node": "^22.15.21",
    "neo4j-driver": "^5.28.1",
    "parse-neo4j": "^0.6.11",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "jest-circus": "^29.5.0",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
